@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-primary">
            Logout
        </a>
    </div>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Payment" asp-action="CreatePayment" class="btn btn-success">
            Logout
        </a>
    </div>
    @if (TempData["ErrorMessage"] is string msg)
    {
        <div class="alert alert-danger">@msg</div>
    }

    <h2>Акаунти</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Номер на Акаунт</th>
                <th>IBAN</th>
                <th>Наличност</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.BankAccounts)
            {
                <tr>
                    <td>@account.BankAccountId</td>
                    <td>@account.IBAN</td>
                    <td>@account.Balance.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

</div>
